<div class="form-group <%= "row" if horizontal %>" data-controller="admin--timepicker">
  <label class="col-form-label <%= "col-xl-3" if horizontal %>"><%= label %></label>
  <div class="<%= "col-xl-9" if horizontal %>">
    <%= form.text_field field, options.merge!({value: (form.object.send(field).strftime("%H:%M:%S") rescue nil)}) %>
  </div>
</div>
