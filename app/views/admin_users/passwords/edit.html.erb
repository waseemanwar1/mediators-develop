<%= render Admin::Pages::DevisePageComponent.new(
            header_link: {
              text: t('admin.page.reset_password.sign_in_link'),
              path: new_session_path(resource_name)
            }) do %>

  <!--begin::Wrapper-->
  <div class="kt-login-v2__wrapper">
    <div class="kt-login-v2__container">
      <div class="kt-login-v2__title">
        <h3><%= t('admin.page.reset_password.form_label') %></h3>
      </div>

      <div class="mx-5">
        <%= render "admin_users/shared/error_messages", resource: resource %>
      </div>
      
      <!--begin::Form-->
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'kt-login-v2__form kt-form' }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: t('admin.page.reset_password.password.placeholder') %>
          <% if @minimum_password_length %>
            <span class="form-text text-muted"><%= t('admin.page.sign_up.password.help') %></span>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control', placeholder: t('admin.page.reset_password.password_confirmation.placeholder') %>
        </div>

        <!--begin::Action-->
        <div class="kt-login-v2__actions">
          <%= f.submit t('admin.page.reset_password.reset_password_button'), class: 'btn btn-brand btn-elevate btn-pill kt-pull-right ml-auto' %>
        </div>

        <!--end::Action-->
      <% end %>

      <!--end::Form-->

    </div>
  </div>

  <!--end::Wrapper-->

  <!--begin::Image-->
  <div class="kt-login-v2__image">
    <%= image_pack_tag 'admin/signin-background.svg', alt: 'Background' %>
  </div>

  <!--begin::Image-->

<% end %>
