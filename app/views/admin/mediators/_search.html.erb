<% items.each do |item| %>
  <%= render Admin::Tables::Items::SimpleRowComponent.new(
              resource: item,
              fields: [
                Admin::Tables::Fields::TextComponent.new(item.id),
                Admin::Tables::Fields::TextComponent.new(item.first_name),
                Admin::Tables::Fields::TextComponent.new(item.last_name),
                Admin::Tables::Fields::TextComponent.new(item.plan),
                Admin::Tables::Fields::TextComponent.new(item.next_pay),
              ],
              actions: [
                Admin::Tables::Actions::IconButtonComponent.new(url: edit_admin_mediator_path(item), icon: 'la la-pencil'),
                Admin::Tables::Actions::DestroyButtonComponent.new(url: admin_mediator_path(item))
              ]) %>
<% end %>
