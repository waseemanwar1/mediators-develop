<div class="row">
  <div class="col-xl-8">
    <%= render Admin::Forms::SimpleFormComponent.new(
              title: title,
              resource: resource,
              alerts: flash[:errors],
              fields: [
                  Admin::Forms::Fields::SelectComponent.new(
                    :admin_user_id,
                    label: t('admin.page.issues.form.admin_user_id.label'),
                    values: AdminUser.all.map{ |u| [u.username, u.id] },
                    include_blank: true,
                    placeholder: t('admin.page.issues.form.admin_user_id.placeholder')
                  ),
                  Admin::Forms::Fields::SelectComponent.new(
                    :case_id,
                    label: t('admin.page.issues.form.case_id.label'),
                    values: Case.all.pluck(:name, :id),
                    include_blank: true,
                    placeholder: t('admin.page.issues.form.case_id.placeholder')
                  ),
                  Admin::Forms::Fields::SelectComponent.new(
                    :party_id,
                    label: t('admin.page.issues.form.party_id.label'),
                    values: Party.all.map{ |u| [u.to_s, u.id] },
                    include_blank: true,
                    placeholder: t('admin.page.issues.form.party_id.placeholder')
                  ),
                  Admin::Forms::Fields::TextComponent.new(
                    :title,
                    label: t('admin.page.issues.form.title.label'),
                    placeholder: t('admin.page.issues.form.title.placeholder')
                  ),
                  Admin::Forms::Fields::AutosizeAreaComponent.new(
                    :description,
                    label: t('admin.page.issues.form.description.label'),
                    placeholder: t('admin.page.issues.form.description.placeholder')
                  ),
                  Admin::Forms::Fields::TextComponent.new(
                    :resolution_title,
                    label: t('admin.page.issues.form.resolution_title.label'),
                    placeholder: t('admin.page.issues.form.resolution_title.placeholder')
                  ),
                  Admin::Forms::Fields::AutosizeAreaComponent.new(
                    :resolution_description,
                    label: t('admin.page.issues.form.resolution_description.label'),
                    placeholder: t('admin.page.issues.form.resolution_description.placeholder')
                  ),
                  Admin::Forms::Fields::TextComponent.new(
                    :mediators_notes_title,
                    label: t('admin.page.issues.form.mediators_notes_title.label'),
                    placeholder: t('admin.page.issues.form.mediators_notes_title.placeholder')
                  ),
                  Admin::Forms::Fields::AutosizeAreaComponent.new(
                    :mediators_notes_description,
                    label: t('admin.page.issues.form.mediators_notes_description.label'),
                    placeholder: t('admin.page.issues.form.mediators_notes_description.placeholder')
                  ),
                  Admin::Forms::Fields::AutosizeAreaComponent.new(
                    :agreement,
                    label: t('admin.page.issues.form.agreement.label'),
                    placeholder: t('admin.page.issues.form.agreement.placeholder')
                  ),
              ],
              actions: [
                Admin::Forms::Actions::ReturnButtonComponent.new(url: admin_issues_path),
                Admin::Forms::Actions::CancelButtonComponent.new,
                Admin::Forms::Actions::SaveButtonComponent.new
              ]) %>
  </div>
  <div class="col-4">

  </div>
</div>
