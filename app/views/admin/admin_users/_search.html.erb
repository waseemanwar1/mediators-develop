<% items.each do |item| %>
  <%= render Admin::Tables::Items::SimpleRowComponent.new(
              resource: item,
              fields: [
                Admin::Tables::Fields::TextComponent.new(item.email.to_s),
              ],
              actions: [
                Admin::Tables::Actions::IconButtonComponent.new(url: edit_admin_admin_user_path(item, group: params[:group]), icon: 'la la-pencil'),
                Admin::Tables::Actions::DestroyButtonComponent.new(url: admin_admin_user_path(item, group: params[:group]))
              ]) %>
<% end %>
