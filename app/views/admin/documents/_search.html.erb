<% items.each do |item| %>
  <%= render Admin::Tables::Items::SimpleRowComponent.new(
              resource: item,
              fields: [
                Admin::Tables::Fields::TextComponent.new(item.id),
                Admin::Tables::Fields::TextComponent.new(item.admin_user),
                Admin::Tables::Fields::TextComponent.new(item.case),
                Admin::Tables::Fields::TextComponent.new(item.file_name),
                Admin::Tables::Fields::TextComponent.new(item.date),
                Admin::Tables::Fields::TextComponent.new(item.author),
              ],
              actions: [
                Admin::Tables::Actions::IconButtonComponent.new(url: edit_admin_document_path(item), icon: 'la la-pencil'),
                Admin::Tables::Actions::DestroyButtonComponent.new(url: admin_document_path(item))
              ]) %>
<% end %>
